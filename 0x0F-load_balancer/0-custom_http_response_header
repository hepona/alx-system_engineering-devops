#!/usr/bin/env bash
#double the number of webservers
sudo apt update
sudo apt install -y nginx
name=$(hostname | cut -d '-' -f2-)
echo "<p>Hello World!</p>" > /var/www/html/index.html
echo -e "server{\nX-Served-By: $(id -u "$(whoami)")-$name\n}" | sudo tee /etc/nginx/nginx.conf
sudo service nginx start